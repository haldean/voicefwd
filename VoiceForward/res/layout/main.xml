<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical">
    <ImageView android:id="@+id/big_logo" android:src="@drawable/large_icon_nocolor" android:layout_height="wrap_content" android:layout_width="match_parent"></ImageView>
    <TextView android:id="@+id/textView1" android:textSize="36sp" android:text="@string/app_name" android:layout_height="wrap_content" android:layout_width="match_parent" android:gravity="center"></TextView>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/linearLayout1">
        <EditText android:text="@string/default_host_name" android:id="@+id/host_name" 
        	android:layout_height="wrap_content" android:layout_width="wrap_content" 
        	android:layout_weight="1"/>
        <Button android:text="@string/host_button" 
        	android:id="@+id/btn_dest" 
        	android:layout_weight="0.2" android:layout_width="120sp" android:layout_height="match_parent"/>
    </LinearLayout>
    <RelativeLayout android:layout_width="match_parent" android:id="@+id/relativeLayout1" android:layout_height="wrap_content">
        <Button android:id="@+id/btn_speak" android:layout_height="wrap_content" android:text="@string/speak_button" android:layout_width="wrap_content" android:textSize="20sp" android:gravity="center|center_vertical" android:layout_centerVertical="true" android:layout_centerInParent="true"/>
    </RelativeLayout>
    <ListView android:id="@+id/list" android:layout_width="match_parent"
	android:layout_height="0dip" android:layout_weight="1" />

 </LinearLayout>
